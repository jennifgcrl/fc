#!/usr/bin/env zsh

set -eu

# cd "$(dirname "$0")/.."
cd ~/code/fc

echo "ğŸ” Checking repository state..."

if [[ -n "$(git status --porcelain)" ]]; then
  echo "ğŸ“¦ Stashing unstaged changes..."
  git stash push -m "Auto-stashed by update script"
  STASHED=1
else
  STASHED=0
fi

echo "â¬‡ï¸ Fetching updates..."
git fetch origin

LOCAL=$(git rev-parse HEAD)
REMOTE=$(git rev-parse origin/main)

if [[ "$LOCAL" != "$REMOTE" ]]; then
  echo "ğŸ”„ Rebasing onto origin/main..."
  git rebase origin/main -Xours
  REBASED=1
else
  echo "âœ… Already up to date with origin/main."
  REBASED=0
fi

if [[ "$STASHED" -eq 1 ]]; then
  echo "ğŸ“‚ Applying stashed changes..."
  git stash pop
fi

echo "ğŸ”¨ Rebuilding system..."
if [[ $(uname) == "Linux" ]]; then
  sudo nixos-rebuild switch --flake .
else # Darwin
  sudo darwin-rebuild switch --flake .
fi

if [[ -n "$(git status --porcelain)" ]]; then
  echo "ğŸ’¾ Committing changes..."
  git add .
  git commit -m "wip"

  echo "ğŸš€ Pushing changes..."
  git push
else
  echo "ğŸ“­ No changes to commit."
fi

nix flake archive

echo "âœ¨ Update complete!"
